datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username String @unique
  password  String   // Stores hashed password
  name      String
  role      Role     @default(PASSENGER)
  createdAt DateTime @default(now())
  
  queueEntries QueueEntry[]
}

model Flight {
  id            String   @id @default(uuid())
  flightCode    String   @unique
  destination   String
  departureTime DateTime
  status        String   @default("SCHEDULED") 
  
  queueEntries QueueEntry[]
}

model QueueEntry {
  id                String   @id @default(uuid())
  userId            String
  flightId          String
  ticketClass       String   // ECONOMY, BUSINESS, FIRST
  isSpecialNeeds    Boolean  @default(false)
  priorityScore     Int
  status            String   // WAITING, CALLED, COMPLETED, NOSHOW
  assignedCounter   String?  
  
  joinedAt          DateTime @default(now())
  serviceStartedAt  DateTime?
  serviceCompletedAt DateTime?

  user   User   @relation(fields: [userId], references: [id])
  flight Flight @relation(fields: [flightId], references: [id])
}

enum Role {
  PASSENGER
  ADMIN
  STAFF
}

enum QueueStatus {
  WAITING
  CALLED
  SERVING
  COMPLETED
  CANCELLED
}

enum TicketClass {
  ECONOMY
  BUSINESS
  FIRST
}